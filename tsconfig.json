{
  "compilerOptions": {
    "strict": false,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "sourceMap": true,
    "jsx": "preserve",
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["types"],
    "types": [
      "node",
      "@nativescript-dom/vue-types",
      "@nativescript-dom/core-types",
      "@nativescript-dom/solidjs-types"
    ],
    "jsxImportSource": "@nativescript-dom/solidjs-types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "target": 3,
    "lib": "nativescript-vue"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "platforms"]
}
